$c-navy: #010059;
$c-navy-grey: #9999b5;
$c-cobalt: #207dff;
$c-magenta: #8d309b;
$c-gold: #ffa900;

body {
    margin: 2rem 5rem;
}

main {
    display: flex;
    // max-width: 110rem;
    border-top: 5px solid $c-navy;
    border-bottom: 5px solid $c-navy;
}

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 2rem;
    padding-bottom: 2rem;

    ul {
        list-style: none;
        
        li {
            display: inline-block;

            &:not(:last-child) {
                margin-right: 2rem;
            }
        }

        
    }
}

.logo {
    height: 70px;
    width: 70px;
    // margin-left: 40px;
    margin-right: auto;
    padding-left: 1rem;
}

.left {
    flex: 0 1 48%; 
    padding: 2rem;
}

.right {
    flex: 0 1 48%; 
    padding: 2rem;
    display: flex;
}

.left {
    border-right: 5px solid $c-navy;
}

.box1 {
    padding: 2rem; 
    background-color: $c-gold;
}
.box2 {
    padding: 2rem; 
    background-color: $c-magenta;
}
.rbox {
    padding: 2rem; 
    background-color: $c-cobalt;
    flex: 1;

    &_img {
        height: 300px;
        background-image: url(../img/dad-bike-point.png);
        background-repeat: no-repeat;
        background-size: cover;
        
    } 
}
